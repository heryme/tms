<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:id="@+id/rl_taskrow_main">

    <ImageView
        android:id="@+id/iv_task_priority"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_star" />
    <ImageView
        android:id="@+id/iv_task_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:background="@drawable/rounded_task_info_bg"
        android:src="@mipmap/ic_eye"/>

    <LinearLayout
        android:id="@+id/ll_task_list_row_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_task_priority"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_task_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hiiii"
            android:textSize="@dimen/tv_title_text_size"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="2dp">

            <ImageView
                android:id="@+id/iv_projectName"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/ic_project"/>

            <TextView
                android:id="@+id/tv_task_project_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Helooo"
                android:textSize="@dimen/tv_normal_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="2dp">

            <ImageView
                android:id="@+id/iv_assignTo"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/ic_assign_to"/>

            <TextView
                android:id="@+id/tv_assignTo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="Assign To"
                android:textSize="@dimen/tv_normal_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="2dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/ic_hours"/>

            <TextView
                android:id="@+id/tv_hours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Hours"
                android:textSize="@dimen/tv_normal_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="2dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/ic_date"/>

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Date"
                android:textSize="@dimen/tv_normal_text_size" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>