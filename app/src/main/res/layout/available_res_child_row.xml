<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/common_padding">

    <LinearLayout
        android:id="@+id/ll_available_res_child_row_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_child_row_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/tv_title_text_size"
            android:layout_weight="1"
            android:text="Title" />

        <TextView
            android:id="@+id/tv_child_row_project_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/tv_title_text_size"
            android:layout_weight="1"
            android:text="Project Name" />

        <TextView
            android:id="@+id/tv_child_row_created_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/tv_title_text_size"
            android:layout_weight="1"
            android:text="Created Date" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_available_res_child_row_header">
        <TextView
            android:id="@+id/tv_child_row_title_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="3dp"
            android:textStyle="italic"
            android:textSize="@dimen/tv_normal_text_size"
            android:text="Title" />

        <TextView
            android:id="@+id/tv_task_project_name_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:textSize="@dimen/tv_normal_text_size"
            android:textStyle="italic"
            android:layout_weight="1"
            android:text="Project Name" />

        <TextView
            android:id="@+id/tv_child_row_created_date_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:textSize="@dimen/tv_normal_text_size"
            android:textStyle="italic"
            android:layout_weight="1"
            android:text="Created Date" />
    </LinearLayout>
</RelativeLayout>